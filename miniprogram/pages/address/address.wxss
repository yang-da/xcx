page{
  position: relative;
  min-height: 100vh;
}
.picker{
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #fff;
  border-radius:10rpx 10rpx 0px 0px;
  transform: translateY(100%);
}
.pickerChoose{
  height: 44px;
  line-height: 44px;
  display: flex;
  justify-content: space-between;
}
.pickerChoose text{
  font-size:30rpx;
  color: #a2a2a2;
  padding: 0 28rpx;
}
.pickerChoose text.yes{
  color: #FF653C;
}

picker-view{
  height: 240px;
}
picker-view-column{
  text-align: center;
}
picker-view-column view{
  line-height: 40px;
}
.active{
  height: 40px;
  line-height: 40px;
  color: #ff653c;
}

