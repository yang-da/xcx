view{
  box-sizing: border-box;
}

.main{
  background-color: #fff;
}
.main>view{
  height: 112rpx;
  line-height: 112rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #f6f6f6;
  font-size: 30rpx;
  color: #333;
  padding: 0 24rpx;
}
.main>view:first-child image{
  width: 66rpx;
  height: 66rpx;
  border-radius: 50%;
}
.main>view:last-child image{
  width: 26rpx;
  height: 26rpx;
}

.gray{
  position: absolute;
  top: 0;
  width: 100vw;
  height: 100vh;
  background:rgba(0,0,0,0.5);
  z-index: 2;
  /* opacity: 0; */
  /* display: none; */
}
.slide{
    background-color: #ffffff;
    position: fixed;
    bottom: 0;
    width: 100%;
    transform: translateY(100%);
    z-index: 3;
}
.slide view{
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border-bottom: 1px solid #f6f6f6;
  font-size: 32rpx;
  color: #3C3C3C;
}

/* ----------------------------- */
.container{
  padding: 20rpx;
}
.shopInfo{
  background-color: #fff;
  border-radius:10rpx;
  display: flex;
  padding: 20rpx;
  width: 100%;
}
.shopInfo image{
  width:180rpx;
  height:180rpx;
  border-radius:10rpx;
  margin-right: 22rpx;
}
.shopInfo_right {
  flex: 1;
} 
.shopInfo_right .title{
  font-size:24rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis; 
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical; 
  margin-bottom: 5rpx;
}
.shopInfo_right text{
  font-size:24rpx;
  color: #a2a2a2;
  margin-right: 10rpx;
}
.shopInfo .price{
  font-size: 30rpx;
  color: #333;
  margin-top: 25rpx;
}
.shopInfo .price text{
  font-size:30rpx;
  color: #a2a2a2;
  margin-left: 30rpx;
}

.num{
  background-color: #fff;
  border-radius:10rpx;
  margin: 20rpx auto;
  padding: 0 20rpx;
  width: 100%;
}
.num view{
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  font-size:28rpx;
  color: #333;
}
.num view text{
  color: #A2A2A2;
}
.num view:last-child text{
  color: #FF653C;
}

.status{
  background-color: #fff;
  border-radius:10rpx;
  padding: 0 20rpx;
  width: 100%;
}
.status .s1{
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  font-size:28rpx;
  color: #333;
}
.status .s1 picker{
  color: #A2A2A2;
  font-size: 26rpx;
}
.status .s1:nth-child(2){
  border-bottom: 1px solid #E4E4E4;
}
.status textarea{
  font-size: 26rpx;
  padding: 20rpx 0;
  width: 100%;
  height: 180rpx;
  position: reactive;
  z-index: 0;
}
.status .length{
  text-align: right;
  font-size: 26rpx;
  color: #A2A2A2;
  margin-bottom: 4rpx;
}






