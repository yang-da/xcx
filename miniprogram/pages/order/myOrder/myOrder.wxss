.orderList{
  width: 100%;
}
.order{
  border-radius:10rpx;
  background-color: #fff;
  padding: 0 20rpx 20rpx;
  margin-bottom: 20rpx;
}
.orderTop{
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  line-height: 80rpx;
  margin-bottom: 10rpx;
}
.orderTop view image{
  width:34rpx;
  height:32rpx;
  margin-right: 14rpx;
  margin-bottom: 6rpx;
}
.orderTop view{
  font-size:30rpx;
  color: #333;
}
.orderTop text{
