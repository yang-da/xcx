.container{
  position: relative;
  height: 100vh;
}
.gray,.gray2{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
}
.alertBox{
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  text-align: center;
  width: 90%;
  background-color: #fff;
}
.alertBox{
  width: 80%;
  border-radius:10rpx;
  padding-top: 50rpx;
}
.closeAlert{
  position: absolute;
  right: 0;
  top: -70rpx;
  z-index: 20;
} 
.closeAlert image{
  width: 50rpx;
  height: 50rpx;
}
.alertTi{
  font-size:34rpx;
  color: #222;
  font-weight: 500;
  margin-bottom: 25rpx;
}
.alertTi image{
  width: 42rpx;
  height: 42rpx;
  margin: 12rpx;
}
.alertBox .van-popup>text{
  font-size:30rpx;
  color: #222;
}
.alertBox .yesNo{
  display: flex;
  border-top: 1px solid #E4E4E4;
  margin-top: 50rpx;
}
.alertBox .yesNo text{
  display: inline-block;
  width: 50%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size:30rpx;
  color: #222;
}
.alertBox .yesNo text.yes{
  color: #FF653C;
  position: relative;
}
.alertBox .yesNo text.yes::before{
  content: '';
  position: absolute;
  height: 90%;
  border-left: 1px solid #e4e4e4;
  top: 50%;
  transform: translateY(-50%);
  left: 0;
}



.load{
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  display: inline-block;
  width: 100%;
  color: #333333;
  font-size: 28rpx;
}