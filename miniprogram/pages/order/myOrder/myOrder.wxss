  font-size:28rpx;
}
.orderDetail>view{
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}
.orderDetail>view>image{
  width: 180rpx;
  height: 180rpx;
  margin-right: 24rpx;
}
.orderText{
  flex: 1;
}
.orderDetail .title{
  color: #333;
  font-weight: 500;
  font-size: 24rpx;
  line-height:36rpx;
  overflow: hidden;
  text-overflow: ellipsis; 
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical; 
}
.orderDetail .norms{
  font-size: 24rpx;
  color: #A2A2A2;
  margin-top: 18rpx;
  margin-bottom: 24rpx;
}
.orderDetail .norms text{
  margin-right: 18rpx;
}
.orderDetail .price{
  font-size:30rpx;
  font-weight: 500;
  color: #333;
}
.orderDetail .num{
  font-size:30rpx;
  color: #a2a2a2;
  margin-left: 30rpx;
}
.order .news{
  color: #333;
  font-size: 26rpx;
  font-weight: 500;
  margin:22rpx 0 24rpx;
  text-align: right;
  display: block;
}
.order .doSome{
  display: flex;
  justify-content:flex-end;
}
.doSome van-button{
  padding: 0;
  display: inline-block;
  width:150rpx;
  height:60rpx;
  line-height: 58rpx;
  text-align: center;
  border:1rpx solid #999;
  border-radius:30rpx;
  color: #333333;
  font-size: 24rpx;
  margin-left: 20rpx;
}
.doSome .van-button--normal{
  padding: 0;
}
.doSome .van-button{
  height:auto;
  border: 0;
}
.doSome .btn .van-button{
  color: #FF653C;
}
.doSome .btn {
  border:1rpx solid #FF653C;
  color: #FF653C;
}

