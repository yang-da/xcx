text,view{
  box-sizing: border-box;
}
image{
  vertical-align: middle;
}
.container{
  padding: 0 20rpx;
}
.steps{
  width: 100%;
  display: flex;
  justify-content: space-around;
  height: 180rpx;
  align-items: center;
}
.steps view {
  text-align: center;
  font-size: 28rpx;
  color: #a2a2a2;
  position: relative;
}
.steps view::after{
  content: '';
  position: absolute;
  width: 120rpx;
  border-top: 2rpx dashed #a2a2a2;
  top: 30%;
  right: -116rpx;
}
.type1 view::after{
  right: -90rpx;
}
.steps view:last-child::after{
  border-top: 0;
}
.steps view.active{
  color: #FF653C;
}
.steps view.active::after{
  border-top: 2rpx dashed #FF653C;
}
.type2 view.active:nth-child(3)::after{
  border-top: 0;
}
.type1 view.active:nth-child(4)::after{
  border-top: 0;
}
.steps view image{
  width: 40rpx;
  height: 40rpx;
  display: block;
  margin: 15rpx auto;
}
.steps view .sanjiao{
  position: absolute;
  width: 48rpx;
  height: 30rpx;
  margin: 0;
  left: 50%;
  transform: translateX(-50%);
  bottom: -36rpx;
}
/* 进度说明 */
.stepShow{
  width: 100%;
  background-color: #fff;
  position: relative;
  padding: 20rpx;
}
.stepShow image{
  position: absolute;
  width: 48rpx;
  height: 30rpx;
  top: -30rpx;
}
.stepShow .stepShow1{
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
  padding-left: 22rpx;
}
.stepShow .stepShow2{
  font-size: 26rpx;
  color: #666;
  padding-left: 22rpx;
}
.stepShowIn{
  background-color: #f6f6f6;
  border-radius:10rpx;
  padding: 20rpx;
  margin-top: 14rpx;
}
.stepShowIn text{
  display: inline-block;
  width:8rpx;
  height:8rpx;
  border-radius: 50%;
  background-color: #a2a2a2;
  margin-right: 16rpx;
}
.stepShowIn view{
  font-size:22rpx;
  color: #a2a2a2;
  margin-bottom: 12rpx;
}
.stepShowIn view:last-child{
  margin-bottom: 0;
}
.change{
  width:250rpx;
  height:60rpx;
  line-height: 60rpx;
  text-align: center;
  border:1px solid rgba(255,101,60,1);
  border-radius:30rpx;
  font-size:24rpx;
  color: #FF653C;
  float: right;
  margin-top: 30rpx;
}
/* 退款金额 */
.price{
  display: flex;
  justify-content: space-between;
  border-radius:10rpx;
  height: 72rpx;
  line-height: 72rpx;
  padding: 0 20rpx;
  font-size:26rpx;
  color: #333;
  background-color: #fff;
  margin: 20rpx 0;
  width: 100%;
}
.price text{
  font-size: 26rpx;
  color: #FF653C;
}
/* 订单明细 */
.ddmx{
  background-color: #fff;
  width: 100%;
  padding: 0 20rpx 20rpx;
  border-radius:10rpx;
}
.ddmx view{
  color: #666;
  font-size: 26rpx;
  white-space:nowrap;
  text-overflow:ellipsis;
  overflow:hidden;
  -o-text-overflow:ellipsis;
  margin-top: 20rpx;
}
.ddmx view text{
  margin-right: 60rpx;
}
/* 协商记录 */
navigator{
  width: 100%;
}
.record{
  display: flex;
  justify-content: space-between;
  width: 100%;
  background-color: #fff;
  border-radius:10rpx;
  height: 72rpx;
  line-height: 72rpx;
  margin: 20rpx 0;
  padding: 0 20rpx;
  font-size:26rpx
}
/* 商品 */
.shop{
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 150rpx;
  width: 100%;
}
/* .list{
  margin-bottom: 50rpx;
} */
.shopLists .list:last-child{
  margin-bottom: 20rpx;
}
.list_main{
  display: flex;
  justify-content: space-between;
}
.list_main>image{
  width: 180rpx;
  height: 180rpx;
  margin-right: 24rpx;
}
.list_main .text{
  flex: 1;
}
.list_main .title{
  font-size:24rpx;
  font-weight:500;
  line-height:36rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis; 
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical; 
}
.list .text text{
  color: #A2A2A2;
  font-size: 24rpx;
  margin-right: 20rpx;
  margin-top: 6rpx;
}
.list .text view:last-child{
  color: #333333;
  font-size: 30rpx;
  margin-top: 15rpx;
}
.list .text view:last-child text{
  font-size:30rpx;
  color: #A2A2A2;
  margin-left: 30rpx;
}
.list .orderId{
  font-size: 26rpx;
  color: #A2A2A2;
  margin-top: 35rpx;
}
.list .orderId text{
  color: #FF653C;
  font-size: 24rpx;
  margin-left: 20rpx;
}
.list .time{
  font-size:26rpx;
  color: #A2A2A2;
  margin-top: 14rpx;
}

button{
  font-size: 22rpx;
  color: #FF653C;
  display: inline-block;
  width: auto;
  height: 26rpx;
  line-height: 26rpx;
  padding: 0;
  border-radius: 0;
  vertical-align: top;
  margin-top: 1px;
}


