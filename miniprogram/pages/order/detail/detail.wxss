.popupTitle{
  text-align: center;
  font-size:32rpx;
  color: #333;
  line-height: 100rpx;
  height: 100rpx;
}
.choosePay{
  display: flex;
  justify-content: space-between;
  padding: 0 42rpx;
  height: 40rpx;
  line-height: 40rpx;
}
.choosePay view:first-child {
  font-size:28rpx;
  color: #333;
}
.choosePay view:first-child image{
  width: 34rpx;
  height: 28rpx;
  margin-right: 20rpx;
  margin-bottom: 8rpx;
}
.choosePay view:last-child image{
  width: 36rpx;
  height: 36rpx;
}
.goPay{
  width: 85%;
  height:80rpx;
