.container{
  position: relative;
}
.gray{
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgba(0,0,0,0.7);
  z-index: 2;
}
.alertBox{
  position: fixed;
  z-index: 3;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  text-align: center;
  width: 90%;
  background-color: #fff;
}
.alertBox{
  width: 80%;
  border-radius:10rpx;
  padding-top: 50rpx;
}
.closeAlert{
  position: absolute;
  right: 0;
  top: -70rpx;
  z-index: 20;
} 
.closeAlert image{
  width: 50rpx;
  height: 50rpx;
}
.alertTi{
  font-size:34rpx;
  color: #222;
  font-weight: 500;
  margin-bottom: 25rpx;
}
.alertTi image{
  width: 42rpx;
  height: 42rpx;
  margin: 12rpx;
}
.alertBox .van-popup>text{
  font-size:30rpx;
  color: #222;
}
.alertBox .yesNo{
  display: flex;
  border-top: 1px solid #E4E4E4;
  margin-top: 50rpx;
}
.alertBox .yesNo text{
  display: inline-block;
  width: 50%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size:30rpx;
  color: #222;
}
.alertBox .yesNo text.yes{
  color: #FF653C;
  position: relative;
}
.alertBox .yesNo text.yes::before{
  content: '';
  position: absolute;
  height: 90%;
  border-left: 1px solid #e4e4e4;
  top: 50%;
  transform: translateY(-50%);
  left: 0;
}

.sqsh {
  text-align: right;
}
.sqsh text{
  display: inline-block;
  width:150rpx;
  height:60rpx;
  line-height:58rpx;
  text-align: center;
  border:1px solid rgba(162,162,162,1);
  border-radius:30rpx;
  font-size:24rpx;
  color: #333;
}



