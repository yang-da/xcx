.van-tab--active {
  color: #FF653C !important;
}

.lists {
  padding: 0 20rpx;
  margin-top: 20rpx;
}

.list {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 0 20rpx 10rpx;
  margin-bottom: 20rpx;
}

.list_top {
  display: flex;
  justify-content: space-between;
  height: 90rpx;
  line-height: 90rpx;
}

.list_top view {
  font-size: 30rpx;
  color: #333333;
}

.list_top view image {
  width: 34rpx;
  height: 32rpx;
  margin-right: 14rpx;
  margin-bottom: 4rpx;
}

.list_top text {
  font-size: 28rpx;
  color: #FF653C;
}

.list_main {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.list_main>image {
  width: 180rpx;
  height: 180rpx;
  margin-right: 24rpx;
}

.list_main .text {
  flex: 1;
}

.list_main .title {
  font-size: 24rpx;
  font-weight: 500;
  line-height: 36rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.text text {
  color: #A2A2A2;
  font-size: 24rpx;
  margin-right: 20rpx;
  margin-top: 6rpx;
}

.text .price {
  color: #333333;
  font-size: 30rpx;
  margin-top: 15rpx;
}

.list_bottom {
  display: flex;
  justify-content: space-between;
  height: 75rpx;
  line-height: 75rpx;
  margin-top: 15rpx;
}

.list_bottom view {
  font-size: 28rpx;
  color: #333;
}

.list_bottom view image {
  width: 34rpx;
  height: 31rpx;
  margin-right: 10rpx;
  margin-bottom: 5rpx;
}

.list_bottom>text {
  width: 150rpx;
  height: 60rpx;
  line-height: 58rpx;
  text-align: center;
  font-size: 24rpx;
  color: #FF653C;
  border: 1px solid #FF653C;
  border-radius: 30rpx;
  margin-top: 5rpx;
}

.load {
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  display: inline-block;
  width: 100%;
  color: #333333;
  font-size: 28rpx;
}