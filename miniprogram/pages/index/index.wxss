  padding-top: 30rpx;
  background-color: #fff;
  height: 166rpx;
}
.swiper3 .swiper-item{
  text-align: center;
}
.swiper3 image{
  width: 86rpx;
  height: 90rpx;
  display: block;
  margin: 0 auto;
}
.swiper3 text{
  font-size: 24rpx;
  color: #666666;
}










