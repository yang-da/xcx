/* pages/index/index.wxss */
page{
  position: relative;
}
view {
  box-sizing: border-box;
}

form {
  background-color: #fff;
  padding-bottom: 20rpx;
}

.search {
  width: 80%;
  margin: 0 auto;
  height: 64rpx;
  line-height: 64rpx;
  background: #f6f6f6;
  border-radius: 32rpx;
  display: flex;
  padding: 0rpx 32rpx;
}

.search icon {
  margin-left: 23rpx;
  margin-right:12rpx;
  margin-top: 16rpx;
}

.search image {
  width: 72rpx;
  height: 34rpx;
  margin-top: 16rpx;
}

.search input {
  font-size: 24rpx;
  margin-top: 10rpx;
}
.van-hairline--top-bottom::after {
  border-width: 0 !important;
}

.swiper {
  height: 270rpx;
}
.swiper .swiper-item{
  width: 100%;
  height: 270rpx;
}
.swiper image{
  width: 100%;
  height: 100%;
}
.swiper1 {
  padding-top: 50rpx;
  height: 115px;
  background-color: #fff;
}

.swiper1 .swiper-item {
  text-align: center;
}

.swiper1 .swiper-item image {
  display: block;
  margin: 0 auto;
  width: 106rpx;
  height: 104rpx;
}

.swiper1 .swiper-item text {
  font-size: 24rpx;
  color: #666;
}

/* .swiper1 .wx-swiper-dots.wx-swiper-dots-horizontal{
  margin-bottom: 2rpx;
} */
.swiper1 .wx-swiper-dot {
  border-radius: 3rpx;
}

.swiper1 .wx-swiper-dot {
  width: 12rpx;
  display: inline-flex;
  height: 6rpx;
  margin: 0 !important;
  justify-content: space-between;
}

.swiper1 .wx-swiper-dot::before {
  content: '';
  flex-grow: 1;
  background: #E4E4E4;
  border-radius: 0rpx
}

.swiper1 .wx-swiper-dot-active::before {
  background: #FED058;
}

.today {
  background-color: #fff;
  padding: 0 20rpx;
}

.todatTit {
  height: 78rpx;
  line-height: 78rpx;
  display: flex;
  justify-content: space-between;
}

.todatTit text:first-child {
  font-size: 34rpx;
}

.todatTit text:last-child {
  font-size: 24rpx;
  color: #A2A2A2;
}

.swiper2 {}

.swiper2 image {
  width: 100%;
  height: 190rpx;
  border-radius: 10rpx;
  display: block;
  margin: 0 auto;
}
.swiper2 swiper-item{
  padding: 0 20rpx;
  box-sizing: border-box;
  position: relative;
}
.swiper2 swiper-item::after{
  content: '';
  width: 1px;
  height: 80%;
  background-color: #E4E4E4;
  position: absolute;
  right: 0;
  top: 0;
}
.swiper2 swiper-item>text{
  font-size: 22rpx;
  color: #333333;
  display: inline-block;
  width: 100%;
  white-space:nowrap;
  text-overflow:ellipsis;
  overflow:hidden;
  -o-text-overflow:ellipsis;
}
.swiperPrice{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.swiperPrice .price_sale{
  font-size: 32rpx;
  color: #FF653C;
}
.swiperPrice .price_sale text{
  font-size: 24rpx;
}
.swiperPrice .del{
  color: #A2A2A2;
  font-size: 22rpx;
  text-decoration:line-through;
}

.screen{
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}
.screen .tabs{
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  padding: 0 40rpx;
  font-size: 28rpx;
  color: #999;
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
}
/* #main{
  position: relative;
} */
#fixed{
  /* position: fixed;
  top: 300rpx;
  z-index: 2; */
  background-color: yellow;
}
.screen .tabs view image{
  width: 14rpx;
  height: 20rpx;
}
.screen .tabs view.active{
  color: #FF653C;
}
.screen .tabs view.second image{
  transform: rotate(180deg);
}
.lists{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 20rpx;
}
.list{
  background-color: #fff;
  width: 48.5%;
  border-radius:10rpx;
  margin-bottom: 20rpx;
}
.list>image{
  width: 100%;
  height: 345rpx;
}
.list .sales{
  display: inline-block;
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background-color: #FFEBEA;
  color: #FF653C;
  font-size: 22rpx;
}
.list .title{
  color: #222;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis; 
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical; 
  margin-top: 16rpx;
  padding: 0 20rpx;
  min-height: 68rpx;
}
.list .title image{
  width: 46rpx;
  height: 22rpx;
  vertical-align: middle;
  margin-right: 16rpx;
}
.list .del{
  color: #A2A2A2;
  font-size: 26rpx;
  text-decoration:line-through;
  padding: 0 20rpx;
}
.list .price{
  display: flex;
  justify-content: space-between;
  padding: 10rpx 20rpx 20rpx;
}
.list .price text:first-child{
  color: #FF653C;
  font-size: 26rpx;
}
.list .price .coupon{
  width: 110rpx;
  padding-left: 2rpx;
  height: 38rpx;
  line-height: 38rpx;
  text-align: center;
  background-size: 100% 100%;
  font-size: 22rpx;
  color: #FF653C;
}

